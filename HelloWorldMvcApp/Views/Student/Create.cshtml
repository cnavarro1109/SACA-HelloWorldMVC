@model HelloWorldMvcApp.Models.StudentViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="student.StudentName" class="control-label"></label>
                <input asp-for="student.StudentName" class="form-control" />
                <span asp-validation-for="student.StudentName" class="text-danger"></span>
                @Html.ValidationMessageFor(model => model.student.StudentName, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">
                <label asp-for="student.Enrolled" class="control-label"></label>
                <input type="checkbox" style="width:30px;height:30px;" asp-for="student.Enrolled" class="form-control" />
                <span asp-validation-for="student.Enrolled" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*@Html.DropDownListFor(m => m.StudentGender, new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender")*@
                @Html.DropDownListFor(x => Model.student.StudentGenderId, new SelectList(Model.studentGender, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "StudentGender" })

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

